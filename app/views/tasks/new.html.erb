<h1>Tasks#new</h1>
<p>Find me in app/views/tasks/new.html.erb</p>

<div>
  <%= form_for(@task) do |task| %>
    <div>
        <%= task.label :body %>
        <%= task.text_field :body, placeholder: "Insert Task Here" %>
    </div>
    <div>
        <%= task.label :position %>
        <%= task.number_field :position, in: 1..(Task.count) %>
    </div>
    <div>
      <%= task.submit %>
    </div>
  <% end %>
</div>
